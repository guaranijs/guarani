{{#extend "_layout"}}
{{#content "body"}}
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2>Error Code</h2>
    </div>
    <div class="col-12">
      <p>{{ error }}</p>
    </div>
  </div>

  {{#if error_description}}
  <div class="row">
    <div class="col-12">
      <h2>Error Description</h2>
    </div>
    <div class="col-12">
      {{ error_description }}
    </div>
  </div>
  {{/if}}
</div>
{{/content}}
{{/extend}}
