{
  "name": "uuid",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/uuid/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/uuid",
        "main": "packages/uuid/src/index.ts",
        "tsConfig": "packages/uuid/tsconfig.lib.json",
        "assets": ["LICENSE", "packages/uuid/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/uuid/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional",
        "push": true
      }
    }
  }
}
