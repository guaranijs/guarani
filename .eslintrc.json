{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "camelcase": "off",
    "new-cap": "off",
    "no-dupe-class-members": "off",
    "no-redeclare": "off",
    "no-useless-constructor": "off",
    "space-before-function-paren": "off"
  }
}
