{{#extend "layout"}}
  {{#content "body"}}
  <div class="container">
    <form method="post" action="{{ request.url }}">
      {{#if error}}
      <div class="alert alert-danger mb-3">
        <strong class="form-text text-danger">{{ error }}</strong>
      </div>
      {{/if}}

      <div class="mb-3">
        <label for="given-name" class="form-label">Given Name*</label>
        <input type="text" name="givenName" id="given-name" class="form-control">
      </div>

      <div class="mb-3">
        <label for="middle-name" class="form-label">Middle Name</label>
        <input type="text" name="middleName" id="middle-name" class="form-control">
      </div>

      <div class="mb-3">
        <label for="family-name" class="form-label">Family Name*</label>
        <input type="text" name="familyName" id="family-name" class="form-control">
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email*</label>
        <input type="email" name="email" id="email" class="form-control">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password*</label>
        <input type="password" name="password" id="password" class="form-control">
      </div>

      <div class="mb-3">
        <label for="birthdate" class="form-label">Birthdate</label>
        <input type="date" name="birthdate" id="birthdate" class="form-control">
      </div>

      <div class="mb-3">
        <label for="phone-number" class="form-label">Phone Number</label>
        <input type="text" name="phoneNumber" id="phone-number" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary mb-3">Sign Up!</button>
    </form>

    <small class="text-center text-muted mb-3">Already registered? <a href="/auth/login" class="link-primary">Login!</a></small>
  </div>
  {{/content}}
{{/extend}}
