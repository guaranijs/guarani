{{#extend "layout"}}
  {{#content "body"}}
  <div class="container">
    {{#if jwtAssertions}}
    <h1>Generated JWT Assertions:</h1>
    <strong>client_secret_jwt:</strong> <p>{{ jwtAssertions.secretAssertion }}</p>
    <strong>private_key_jwt:</strong> <p>{{ jwtAssertions.privateAssertion }}</p>
    <strong>JWT Bearer Grant:</strong> <p>{{ jwtAssertions.grant }}</p>
    {{/if}}

    <form method="post">
      <input type="hidden" name="_csrf" value="{{ csrf }}">
      <button type="submit" class="btn btn-primary" name="generate" value="yes">Generate JWT Assertion</button>
    </form>
  </div>
  {{/content}}
{{/extend}}
