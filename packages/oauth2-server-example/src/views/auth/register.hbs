{{#extend "_layout"}}
{{#content "body"}}
<div class="container mt-5">
  <form method="post" action="{{ request.originalUrl }}">
    <input type="hidden" name="_csrf" value="{{ csrf }}">

    {{#if errors}}
    <div class="alert alert-danger mb-3">
      {{#each errors}}
      <strong class="form-text text-danger">{{ this }}</strong><br>
      {{/each}}
    </div>
    {{/if}}

    <div class="mb-3">
      <label for="username" class="form-label">Username*</label>
      <input type="text" name="username" id="username" class="form-control">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email*</label>
      <input type="email" name="email" id="email" class="form-control">
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password*</label>
      <input type="password" name="password" id="password" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary mb-3">Sign Up!</button>
  </form>

  <small class="text-center text-muted mb-3">Already registered? <a href="/auth/login"
      class="link-primary">Login!</a></small>
</div>
{{/content}}
{{/extend}}
